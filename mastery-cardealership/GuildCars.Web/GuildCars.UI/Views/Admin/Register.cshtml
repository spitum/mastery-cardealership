@model GuildCars.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

    <hr />
<h4>Add User</h4>
<hr />

@using (Html.BeginForm("Register", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>First Name</label>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>

        <div class="form-group col-md-4">
            <label>Last Name</label>
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-4" style="padding-top:10px;">
            <div><label>Role</label></div>

            @Html.DropDownList("UserRoles",(SelectList)ViewBag.Name, " ")
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Password</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-4">
            <label>Confirm Password</label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div id="submitButton" class="col-md-2" style="padding-left:10px;">
            <input type="submit" value="Register" class="btn btn-outline-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
