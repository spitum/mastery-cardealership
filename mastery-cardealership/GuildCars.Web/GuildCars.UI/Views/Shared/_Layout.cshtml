<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Guild Cars</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Images/GuildCars.svg" width="30" height="25" alt="">
            </a>
            <a class="navbar navbar-brand" href="@Url.Action("Index", "Home")">Guild Cars</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Specials")">Specials <span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("InventoryNew", "Vehicles")">New Inventory <span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("InventoryUsed", "Vehicles")">Used Inventory <span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AddContact", "Contacts")">Contact<span class="sr-only"></span></a>
                    </li>
                    @if (User.IsInRole("Sales"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Sales")">Sales<span class="sr-only"></span></a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Admin")">Admin<span class="sr-only"></span></a>
                        </li>
                    }
                    @using Microsoft.AspNet.Identity
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!","ChangePassword","Admin")
                        </li>
                    }
                    @*@Html.Partial("_LoginPartial")*@
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
