@model GuildCars.UI.Models.IndexViewModels

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/bootstrap")


    <div class="container-fluid" id="indexcarousel" style="background-color: whitesmoke">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <!-- Wrapper for slides -->
                @{
                    var first = true;
                }
                @foreach (var item in Model.specials)
                {
                    <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))" data-interval="5000">
                        <div class="card-text d-none d-md-block">
                            @*<h5>@item.SpecialTitle</h5>*@
                            <h5 class="SpecialTitle">@Html.ActionLink(@item.SpecialTitle, "Index", "Specials")</h5>
                            <h5 class="SpecialDescription">@Html.ActionLink(@item.SpecialDescription, "Index", "Specials")</h5>
                        </div>
                    </div>
                    first = false;
                }
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <hr />
<div class="row">
    <div class="container">
        <h3 style="margin-top:20px;margin-bottom:20px">Featured Vehicles</h3>


        <div class="d-flex justify-content-start flex-wrap mr-auto flex-fill col-xs-12" >

            @foreach (var car in Model.featured)
            {

                <div class="col-xs-12 col-sm-6 col-md-4" style="max-width: 25%">
                    <p class="recentListing text-center"><img style="width:166px;height:110px;" src="@Url.Content("~/Images/" + car.ImageFileName)" /></p>
                    <p class="recentListing text-center">@car.Year @car.MakeName @car.ModelName </p>
                    <p class="recentListing text-center">@car.SalePrice.ToString("c")</p>
                </div>

            }
        </div>

    </div>
</div>
