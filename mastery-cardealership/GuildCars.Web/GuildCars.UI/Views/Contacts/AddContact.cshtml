@model GuildCars.Models.Tables.Contact
@using GuildCars.UI.GoogleCaptcha
@{
    ViewBag.Title = "AddContact";
}

<style>
    .image-text {
        margin-bottom: 2px
    }

    .map-form {
        margin-left: 50px;
        margin-top: 50px;
    }
</style>
<hr />
<h2>Contact Us</h2>

